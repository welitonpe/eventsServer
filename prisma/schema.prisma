// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  familyName String
  email      String
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())

  @@map("users")
}

model Category {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  products Product[]

  @@map("categories")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  price       String
  description String
  banner      String
  ammount     Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  category    Category @relation(fields: [category_id], references: [id])
  category_id String
  items       Item[]

  @@map("products")
}

model Item {
  id        String   @id @default(uuid())
  amout     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  product    Product @relation(fields: [product_id], references: [id])
  product_id String

  @@map("items")
}
